{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "views/*.html", "use": "@vercel/static" },
    { "src": "public/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/views/index.html" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" }
  ]
}
